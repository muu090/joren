<div class="container">
  <div class="row">
    <h2><strong>ユーザ情報登録</strong></h2>
  </div>

  <div class="row registrations">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"form-horizontal"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div class="col-xs-2 col-xs-offset-3">
          <%= f.label :ユーザ名 %>
        </div>
        <div class="col-xs-6">
          <%= f.text_field :name, autofocus: true, class: "name", :size => "63*63" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2 col-xs-offset-3">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-xs-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "63*63" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2 col-xs-offset-3">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <div class="col-xs-6">
          <%= f.password_field :password, autocomplete: "new-password", :size => "63*63" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2 col-xs-offset-3">
          <%= f.label :パスワード確認用 %>
        </div>
        <div class="col-xs-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "63*63" %>
        </div>
      </div>

      <div class="actions row">
        <%= f.submit "登録", class: "btn btn-success col-xs-2 col-xs-offset-6"%>
      </div>
    <% end %>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <h4>既に登録済みの方</h4>
          <h4><%= link_to  "こちら", new_user_session_path %>   からログインしてください。</h4>
        </div>
        <div class="col-xs-6">
        </div>
      </div>
  </div>
</div>
