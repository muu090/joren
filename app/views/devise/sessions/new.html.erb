<div class="row">
  <h2><strong>ログイン</strong></h2>
</div>

<div class="row sessions-row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-horizontal"}) do |f| %>
    
    <div class="form-group">
      <div class="col-xs-2">
        <%= f.label "メールアドレス", class: "control-label" %>
      </div>
      <div class="col-xs-4">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-2">
        <%= f.label :password, "パスワード", class: "control-label"%>
      </div>
      <div class="col-xs-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control"%>
      </div>
    </div>

    <div class="actions row">
      <div class="col-xs-4 col-xs-offset-2 text-right">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
    <div class="row sessions-row">
      <div class="col-xs-4">
        <h4>ユーザ登録をしていない方</h4>
        <h4><%= link_to  "こちら", new_user_registration_path %>   から新規登録してください。</h4>
    </div>
</div>
