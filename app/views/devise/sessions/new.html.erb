<div class="row">
  <div class="devise_form">
    <h2><strong>ログイン</strong></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-horizontal"}) do |f| %>
      
      <div class="form-group">
        <%= f.label "メールアドレス", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "col-sm-3 control-label"%>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12 text-right">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>

    <div class="col-sm-12">
      <h4>ユーザ登録をしていない方</h4>
      <h4><%= link_to  "こちら", new_user_registration_path %>   から新規登録してください。</h4>
  </div>
</div>
