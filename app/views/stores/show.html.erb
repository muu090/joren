<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <% @shop.each do |shop| %>
        <div class="list-group">
          <div class="list-group-item">ロゴ画像（準備中）</div>

          <div class="list-group-item">
            <p class="list-group-item-heading">店名</p>
            <p class="list-group-item-text"><strong><%= shop["name"] %></strong></p>
          </div>

          <div class="list-group-item">
            <p class="list-group-item-heading">住所</p>
            <p class="list-group-item-text"><strong><%= shop["address"] %></strong></p>
          </div>

          <div class="list-group-item">
            <p class="list-group-item-heading">アクセス</p>
            <p class="list-group-item-text"><strong><%= shop["access"] %></strong></p>
          </div>

          <div class="list-group-item">
            <p class="list-group-item-heading">営業時間</p>
            <p class="list-group-item-text"><strong><%= shop["open"] %></strong></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <% @shop.each do |shop| %>
        <ul>
          <% if @check_in_today && @check_in_today.between?(@start_time, @end_time) %> 
            <li class="btn btn-default"> チェックイン済 </li>
            <%= link_to  user_check_in_path(@user, store_id: params[:id]) do %>
              <li class="btn btn-primary">チェックイン履歴確認</li>
            <% end %>
          <% else  %>
            <%= form_with url: user_check_ins_path(@user, store_id: params[:id], store_name: shop["name"]), method: :post, local: true do |f| %>
              <li><%= f.submit "チェックイン", class: "btn btn-warning" %></li>   
            <% end %>   
            <%= link_to  user_check_in_path(@user, store_id: params[:id]) do %>
              <li class="btn btn-primary">チェックイン履歴確認</li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% if @check_in_today && @check_in_today.between?(@start_time, @end_time) %>
<div class="note">
  <h2><strong>NOTE</strong></h2>

  <table class="table table-hover table-inverse">
    <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <th> <%= comment.created_at %> </th>
        <%# フォローボタン %>
        <th> <%= render 'relationships/follow', user: comment.user %> </th>
        <% if comment.user.rank == false %>
          <th><span class="label label-primary"><%= comment.user.rank %></span></th>
        <% else %>
          <th><span class="label label-warning"><%= comment.user.rank %></span></th>
        <% end %>
        <th> <%= comment.user.name %> </th>
        <th> <%= comment.comment %> </th>
        <%# いいね機能を非同期通信で実装 %>
        <span id="like_button">
        <%= render partial: 'likes/like', locals: {comment: comment, store: @store} %>
        </span>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= form_with model: [@store, @comment_new], local: true do |f| %>
    <div class="field">
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントはここに" %>
    </div>
    <div class="actions">
      <%= f.submit "書き込む", class: "btn btn-success pull-right" %>
    </div>
	<% end %>
</div>
<% end %>