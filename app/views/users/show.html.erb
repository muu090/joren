<div class="row">
  <div class="col-xs-3">
    <%= render 'layouts/sidebar', user: @user %>
  </div>

  <div class="col-xs-8 col-xs-offset-1">
    <p class="main-text"><strong>あなたは
    <% if @joren %>
      <% @joren.each do |joren|%>
        <%= joren.count %>
      <% end %>
    <% else %>
    <p>0</p>
    <% end %>
    店舗のJOREN</strong></p>
    <div class="content">
      <h2>JOREN店舗</h2>
      <table class="table">
        <thead>
          <tr>
            <th>店舗名</th>
            <th>総入店回数</th>
            <th>最終入店日時</th>
          </tr>
        </thead>
        <tbody>
        <% @joren.each do |joren|%>
          <tr>
            <th><%= joren.store_name %></th>
            <th><%= joren %></th>
            <th><%= joren.created_at %></th>
          </tr>
        <% end %>
        </tbody>
      </table>  
    </div>
    <div class="content">
      <h2>JORENへの足跡</h2>
      <table class="table">
        <thead>
          <tr>
            <th>店舗名</th>
            <th>総入店回数</th>
            <th>最終入店日時</th>
          </tr>
        </thead>
        <tbody>
        <% @not_joren.each do |not_joren| %>
          <tr>
            <th><%= not_joren.store_name %></th>
            <th><%= not_joren %></th>
            <th><%= not_joren.created_at %></th>
          </tr>
        <% end %>
        </tbody>
      </table>  
    </div>
  </div>
</div>
