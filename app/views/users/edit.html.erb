<div class="row">
  <div class="col-xs-3">
    <%= render 'layouts/sidebar', user: @user %>
  </div>

  <div class="col-xs-8 col-xs-offset-1">
    <h2><strong>ユーザ情報編集</strong></h2>

    <%= form_for(@user, html:{class:"form-horizontal edit-form"}) do |f| %>
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :プロフィール画像 %>
        </div>  
        <div class="col-xs-4">
          <%= f.attachment_field :profile_image%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :ユーザ名 %>
        </div>       
        <div class="col-xs-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :紹介文 %>
        </div>
        <div class="col-xs-7">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-success col-xs-offset-9" %>
      </div>
    <% end %>
  </div>
</div>