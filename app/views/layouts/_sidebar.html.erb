<div class="row">
  <div class="col-xs-5 col-md-12">
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '200x200', class: "img-responsive img-circle sidebar_profile_image" %>
  </div>

  <div class="col-xs-7 col-md-12">
    <table class="table">
      <tr><th colspan="2"><%= user.name %></th></tr>
      <tr><th colspan="2"><%= user.introduction %></th></tr>
      <tr>
        <th>JOREN</th>
        <th><%= user.joren(user).length %></th>
      </tr>
      <tr>
        <th>Follow</th>
        <th><%= link_to "#{user.following.count}", user_follows_path(user) %></th>
      </tr>
      <tr>
        <th>Follower</th>
        <th><%= link_to "#{user.followed.count}", user_followers_path(user) %></th>
      </tr>
    </table>

    <div>
      <% if user.id == current_user.id %>
        <%= link_to 'ユーザ情報編集',edit_user_path(user.id), class: "col-xs-12 btn btn-success" %>
      <% end %>
    </div>

    <div>
      <%= link_to 'チェックイン履歴',user_check_ins_path(user.id), class: "col-xs-12 btn btn-primary" %>
    </div>
  </div>
</div>